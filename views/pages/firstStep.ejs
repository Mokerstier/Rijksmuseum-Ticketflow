            <th><%= variantContent.articleSelectionContent.articleTableTitle %></th>
            <th>Prijs</th>
            <th>Aantal</th>
            <th>Subtotaal</th>

          </thead>
          <tbody>
            <tr>
              <td><%= articles[0].Name %></td>
              <td class="align-middle"><%= articles[0].PriceCent %></td>
              <td>
                <select aria-label="Aantal" name="Articles[0]" id="">
                    <% for( let i = 0; i < articleConfiguration.maxAmountOfArticles+1; i++ ){ %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>
              </td>
              <td></td>
            </tr>
            <tr>
              <td><%= articles[1].Name %></td>
