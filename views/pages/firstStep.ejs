<%- include ("../partials/head.ejs") %>
<main>
  <h2>Eerste stap</h2>
  <form action="tweede-stap" method="GET">
    <section>

      <h2><%= variantContent.articleSelectionContent.pageTitle %></h2>
      <ul>
        <% variantContent.articleSelectionContent.usps.forEach(usp => { %>
        <li><%= usp %></li>
        <% }); %>
      </ul>
    </section>
    <h1><%= variantContent.articleSelectionContent.articleSelectionTitle %></h1>
    <h2><%= variantContent.pageTitle %></h2>
    <section>
      <fieldset>

        <legend>Reguliere tickets</legend>
        <table class="full-width">
