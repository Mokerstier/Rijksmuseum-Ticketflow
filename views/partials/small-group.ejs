<form class="form-first-step" action="tweede-stap" method="GET">
    <%- include ("../partials/usps.ejs") %>
    <section>
      <h1>
        <%= variantContent.articleSelectionContent.articleSelectionTitle %>
      </h1>
      <h2><%= variantContent.pageTitle %></h2>

      <fieldset>
        <legend>Reguliere tickets</legend>
        <table class="full-width">
          <thead>
            <th>
              <%= variantContent.articleSelectionContent.articleTableTitle %>
            </th>
            <th>Prijs</th>
            <th>Aantal</th>
            <th>Subtotaal</th>
          </thead>
          <tbody>
            <tr>
              <td><%= articles[0].Name %></td>
              <td class="align-middle">€ <%= (articles[0].PriceCent / 100).toFixed(2) %></td>
              <td>
                <select aria-label="Aantal <%= articles[0].Name %>" name="Articles[0]" id="">
                  <% for( let i = 0; i <
                  articleConfiguration.maxAmountOfArticles+1; i++ ){ %>
                  <option data-price="<%= articles[0].PriceCent %>" value="<%= i %>"><%= i %></option>
                  <% } %>
                </select>
              </td>
              <td><output class="output">€0.00</output></td>
            </tr>
            <tr>
              <td><%= articles[1].Name %></td>
              <td class="align-middle">€ <%= (articles[1].PriceCent /100).toFixed(2) %></td>
              <td>
                <select aria-label="Aantal ><%= articles[1].Name %>" name="Articles[1]" id="">
                  <% for( let i = 0; i <
                  articleConfiguration.maxAmountOfArticles+1; i++ ){ %>
                  <option data-price="<%= articles[1].PriceCent %>" value="<%= i %>"><%= i %></option>
                  <% } %>
                </select>
              </td>
              <td><output class="output">€0.00</output></td>
            </tr>
          </tbody>
        </table>
      </fieldset>
      <fieldset>
        <legend>Tickets met korting</legend>
        <table class="full-width">
          <thead>
            <th>
              <%= variantContent.articleSelectionContent.articleTableTitle %>
            </th>
            <th>Prijs</th>
            <th>Aantal</th>
            <th>Subtotaal</th>
          </thead>
          <tbody>
            <tr>
              <td><%= articles[2].Name %></td>
              <td class="align-middle">€ <%= (articles[2].PriceCent /100).toFixed(2) %></td>
              <td>
                <select aria-label="Aantal" name="Articles[2]" id="">
                  <% for( let i = 0; i < articleConfiguration.maxAmountOfArticles+1; i++ ){ %>
                  <option data-price="<%= articles[2].PriceCent %>" value="<%= i %>"><%= i %></option>
                  <% } %>
                </select>
              </td>
              <td><output class="output">€0.00</output></td>
            </tr>
            <tr>
              <td><%= articles[3].Name %></td>
              <td class="align-middle">€ <%= (articles[3].PriceCent /100).toFixed(2) %></td>
              <td>
                <select aria-label="Aantal" name="Articles[3]" id="">
                  <% for( let i = 0; i < articleConfiguration.maxAmountOfArticles+1; i++ ){ %>
                  <option data-price="<%= articles[3].PriceCent %>" value="<%= i %>"><%= i %></option>
                  <% } %>
                </select>
              </td>
              <td><output class="output">€0.00</output></td>
            </tr>
            <tr>
              <td><%= articles[4].Name %></td>
              <td class="align-middle">€ <%= (articles[4].PriceCent / 100).toFixed(2) %></td>
              <td>
                <select aria-label="Aantal" name="Articles[4]" id="">
                  <% for( let i = 0; i < articleConfiguration.maxAmountOfArticles+1; i++ ){ %>
                  <option data-price="<%= articles[4].PriceCent %>" value="<%= i %>"><%= i %></option>
                  <% } %>
                </select>
              </td>
              <td><output class="output">€0.00</output></td>
            </tr>
            <tr>
              <td><%= articles[5].Name %></td>
              <td class="align-middle">€ <%= (articles[5].PriceCent / 100).toFixed(2) %></td>
              <td>
                <select aria-label="Aantal" name="Articles[5]" id="">
