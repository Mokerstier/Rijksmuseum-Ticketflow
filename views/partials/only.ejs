    <%- include ("../partials/usps.ejs") %>
  <section>
      <fieldset>
        <legend>
          <%= variantContent.articleSelectionContent.articleSelectionTitle %>
        </legend>
        <h3 id="legendLabel">Belangrijk! Tickets voor het hele museum. 6 tickettypes beschikbaar. De huidige selectie is Aantal tickets: 0, Totale prijs: €0.00</h3>
        <div>
          <% for( let a = 0; a < articles.length; a++ ){ %>
          <article>
            <div>
              <% if(ticketChoice == articles[a].Name){ %>
              <input required checked="checked" type="radio" name="ticketChoice" aria-controls="ticketInfo" data-article-name="<%= articles[a].Name %>" data-article-price="<%= articles[a].PriceCent %>" value="<%= articles[a].Name %>" id="<%= articles[a].Code %>">
              <% } else {%>
              <input required type="radio" name="ticketChoice" aria-controls="ticketInfo" data-article-name="<%= articles[a].Name %>" data-article-price="<%= articles[a].PriceCent %>" value="<%= articles[a].Name %>" id="<%= articles[a].Code %>">
              <% } %>
              <label for="<%= articles[a].Code %>">
                  <div class="ticket-container">
                      <h3><%= articles[a].Name %></h3>
                      <p class="align-middle">€ <%= (articles[a].PriceCent / 100).toFixed(2) %></p>
                  </div>
                  <% if(articles[a].Description != "" && articles[a].Description != "NULL"){ %>
                    <button type="button" class="iBtn" aria-describedby="tooltip<%= a %>">i</button>
                    <p class="tooltip" id="tooltip<%= a %>"><%= articles[a].Description %></p>
                  <% } %>
              </label>
            </div>
            <div></div>
          </article>
        <% } %>
      </div>
      <section id="ticketInfo">
        <p><output id="aantal-first-step" class="block-right" role="status" aria-live="polite">Aantal tickets: 0</output></p>
        <p><output id="total-first-step" class="block-right" role="status" aria-live="polite">Totale prijs: €0.00</output></p>
      </section>
      <input name="totalPrice" type="hidden" class="total-price">
    </fieldset>
    <p>
      <%= variantContent.articleSelectionContent.paragraphContentTitle %>
    </p>
    <ul>
      <% variantContent.articleSelectionContent.paragraphContentListItems.map(item => { %>
      <li><%= item %></li>
      <% }) %>
    </ul>
</section>
<section class="backButtonContainer">
  <a href="/" class="backButton linkStyleUnderline" aria-label="Klik hier om terug te gaan naar stap 1, Kies je groep"> < Terug naar kies je groep</a>
</section>  
<section class="ticketOrder">
  <div>
    <p>Bestellingslijst...</p>
    <input class="backAndNextButton" type="submit" value="Plan je bezoek">
  </div>
</section>